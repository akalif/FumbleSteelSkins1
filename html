<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>FumbleSteelSkins</title>
    
    <link rel="stylesheet" href= "SteelRDStyle.css">
    
</head>

<body onload="startGame()">

    <h1>FumbleSteelSkins</h1>
    <hr>
   
        <script>
        
        var myTeamWR1GamePiece;
        var myTeamWR2GamePiece;
        var myTeamTE1GamePiece;
        var myTeamLeftGuardGamePiece;
        var myTeamLeftTackleGamePiece;
        var myTeamCenterGamePiece;
        var myTeamRightTackleGamePiece;
        var myTeamRightGuardGamePiece;
        var myTeamRunningBackGamePiece;
        var myTeamQuarterBackGamePiece;
        var myTeamWR3TE2RB2GamePiece;
        var myGameArea;
        
        function startGame() {
          myGameArea.start();  
          myTeamWR1GamePiece = new component(20, 20, "black", 30, 55);
          myTeamWR2GamePiece = new component(20, 20, "black", 30, 85);
          myTeamTE1GamePiece = new component(20, 20, "black", 50, 110);
          myTeamLeftGuardGamePiece = new component(20, 20,"black",50, 135);
          myTeamLeftTackleGamePiece = new component(20, 20, "black", 50, 160);
          myTeamCenterGamePiece = new component(20, 20, "black", 70, 185);
          myTeamRightTackleGamePiece = new component(20, 20, "black", 50, 215);
          myTeamRightGuardGamePiece= new component(20, 20, "black", 50, 240);
          myTeamRunningBackGamePiece= new component(20, 20, "black", 0, 185);
          myTeamQuarterBackGamePiece= new component(20, 20, "black", 35, 185);
          myTeamWR3TE2RB2GamePiece= new component(20, 20, "black", 30, 270);
          
        }
        
        var myGameArea = {
            canvas : document.createElement("canvas"),
            start : function() {
                this.canvas.width = 1300;
                this.canvas.height = 500;
                this.context = this.canvas.getContext("2d");
                document.body.insertBefore(this.canvas, document.body.childNodes[0]);
                this.interval = setInterval(updateGameArea, 20);
            },
            clear : function() {
                this.context.clearRect(0, 0, this.canvas.width, this.canvas.height);
            }
        }
        
        function component(width, height, color, x, y) {
            this.width = width;
            this.height = height;
            this.speedX = 1;
            this.speedY = 1;
            this.x = x;
            this.y = y;    
            this.update = function() {
                ctx = myGameArea.context;
                ctx.fillStyle = color;
                ctx.fillRect(this.x, this.y, this.width, this.height);
            }
            this.newPos = function() {
                this.x += this.speedX;
                this.y += this.speedY;        
            }    
        }
        
        function updateGameArea() {
            myGameArea.clear();
            myTeamWR1GamePiece.newPos();
            myTeamWR1GamePiece.update();


            myTeamWR2GamePiece.newPos(); 
            myTeamWR2GamePiece.update();

            myTeamTE1GamePiece.newPos();
            myTeamTE1GamePiece.update();

            myTeamLeftGuardGamePiece.newPos(); 
            myTeamLeftGuardGamePiece.update();

            myTeamLeftTackleGamePiece.newPos();
            myTeamLeftTackleGamePiece.update(); 

            myTeamCenterGamePiece.newPos();
            myTeamCenterGamePiece.update(); 

            myTeamRightTackleGamePiece.newPos(); 
            myTeamRightTackleGamePiece.update();

            myTeamRightGuardGamePiece.newPos();
            myTeamRightGuardGamePiece.update(); 

            myTeamRunningBackGamePiece.newPos();
            myTeamRunningBackGamePiece.update(); 

            myTeamQuarterBackGamePiece.newPos();
            myTeamQuarterBackGamePiece.update(); 

            myTeamWR3TE2RB2GamePiece.newPos();
            myTeamWR3TE2RB2GamePiece.update();       
            
            
            
        }
        
        function moveup() {
            
            myTeamWR1GamePiece -= 1;
            myTeamWR2GamePiece -= 1;
            myTeamTE1GamePiece -= 1;
            myTeamLeftGuardGamePiece -= 1;
            myTeamLeftTackleGamePiece -= 1;
            myTeamCenterGamePiece -= 1;
            myTeamRightTackleGamePiece -= 1;
            myTeamRightGuardGamePiece -= 1;
            myTeamRunningBackGamePiece -= 1;
            myTeamQuarterBackGamePiece -= 1;
            myTeamWR3TE2RB2GamePiece -= 1;
        }
        


        
        function movedown() {
            
            myTeamWR1GamePiece += 1;
            myTeamWR2GamePiece += 1;
            myTeamTE1GamePiece += 1;
            myTeamLeftGuardGamePiece += 1;
            myTeamLeftTackleGamePiece += 1;
            myTeamCenterGamePiece += 1;
            myTeamRightTackleGamePiece += 1;
            myTeamRightGuardGamePiece += 1;
            myTeamRunningBackGamePiece += 1;
            myTeamQuarterBackGamePiece += 1;
            myTeamWR3TE2RB2GamePiece += 1;
        }
        
        function moveleft() {
            
            myTeamWR1GamePiece -1;
            myTeamWR2GamePiece -1;
            myTeamTE1GamePiece -1;
            myTeamLeftGuardGamePiece -1;
            myTeamLeftTackleGamePiece-1;
            myTeamCenterGamePiece -1;
            myTeamRightTackleGamePiece -1;
            myTeamRightGuardGamePiece -1;
            myTeamRunningBackGamePiece -1;
            myTeamQuarterBackGamePiece -1;
            myTeamWR3TE2RB2GamePiece -1;
        }
        
        function moveright() {
            
            myTeamWR1GamePiece1 = 1;
            myTeamWR2GamePiece = 1;
            myTeamTE1GamePiece = 1;
            myTeamLeftGuardGamePiece = 1;
            myTeamLeftTackleGamePiece = 1;
            myTeamCenterGamePiece = 1;
            myTeamRightTackleGamePiece = 1;
            myTeamRightGuardGamePiece = 1;
            myTeamRunningBackGamePiece = 1;
            myTeamQuarterBackGamePiece = 1;
            myTeamWR3TE2RB2GamePiece = 1;
            
        }
        function movedown() {
            
            myTeamWR1GamePiece += 1;
            myTeamWR2GamePiece += 1;
            myTeamTE1GamePiece += 1;
            myTeamLeftGuardGamePiece += 1;
            myTeamLeftTackleGamePiece += 1;
            myTeamCenterGamePiece += 1;
            myTeamRightTackleGamePiece += 1;
            myTeamRightGuardGamePiece += 1;
            myTeamRunningBackGamePiece += 1;
            myTeamQuarterBackGamePiece += 1;
            myTeamWR3TE2RB2GamePiece += 1;
        }

        

        function clearmove() {



           

            myTeamWR1GamePiece.speedX = 0; 
            myTeamWR1GamePiecespeedY = 0;

            myTeamWR2GamePiece.speedX = 0; 
            myTeamWR2GamePiece.speedY = 0; 

            myTeamTE1GamePiece.speedX = 0; 
            myTeamTE1GamePiece.speedY = 0;

            myTeamLeftGuardGamePiece.speedX = 0; 
            myTeamLeftGuardGamePiece.speedY = 0; 

            myTeamLeftTackleGamePiece.speedX = 0; 
            myTeamLeftTackleGamePiece.speedY = 0;

            myTeamCenterGamePiece.speedX = 0; 
            myTeamCenterGamePiece.speedY = 0; 

            myTeamRightTackleGamePiece.speedX = 0; 
            myTeamRightTackleGamePiece.speedY = 0;

            myTeamRightGuardGamePiece.speedX = 0; 
            myTeamRightGuardGamePiece.speedY = 0;

            myTeamRunningBackGamePiece.speedX = 0;
            myTeamRunningBackGamePiece.speedY = 0;

            
            

            myTeamQuarterBackGamePiece.speedX = 0; 
            myTeamQuarterBackGamePiece.speedY = 0;

            myTeamWR3TE2RB2GamePiece.speedX = 0; 
            myTeamWR3TE2RB2GamePiece.speedY = 0;
        }

        </script>
    
        <div style="text-align:center;">
          <button onclick="moveup()">UP</button><br><br>
          <button onclick="moveleft()">LEFT</button>
          <button onclick="moveright()">RIGHT</button><br><br>
          <button onclick="movedown()">DOWN</button>
        </div>
        
       
        

        </body>
</html>
